<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntegrationApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomIntegrationAppTheme" parent="VideoCreationTheme">

        <!--Video Trimmer-->
        <item name="trimmerStyle">@style/CustomTrimmerViewStyle</item>
        <item name="trimmerRecyclerStyle">@style/CustomTrimmerRecyclerStyle</item>
        <item name="trimmerBackButtonStyle">@style/CustomTrimmerBackButtonStyle</item>
        <item name="trimmerNextButtonStyle">@style/CustomTrimmerNextButtonStyle</item>
        <item name="trimmerCancelButtonStyle">@style/CustomTrimmerCancelButtonStyle</item>
        <item name="trimmerDurationTimelineStyle">@style/CustomTrimmerDurationTimelineStyle</item>
        <item name="trimmerDurationSumTextStyle">@style/CustomTrimmerDurationSumTextStyle</item>
        <item name="trimmerDeleteCrossStyle">@style/CustomTrimmerDeleteCrossStyle</item>
        <item name="trimmerDeleteLabelStyle">@style/CustomTrimmerDeleteLabelStyle</item>
        <item name="trimmerContentViewStyle">@style/CustomTrimmerContentViewStyle</item>
        <item name="trimmerContentLabelStyle">@style/CustomTrimmerContentLabelStyle</item>
        <item name="trimmerThumbImageStyle">@style/CustomTrimmerThumbImageStyle</item>
        <item name="trimmerThumbTextStyle">@style/CustomTrimmerThumbTextStyle</item>

        <item name="trimmer_icon_add_video">@drawable/ic_trimmer_add_video</item>
        <item name="trimmer_icon_play">@drawable/ic_play</item>
        <item name="trimmer_icon_pause">@drawable/ic_pause</item>
        <item name="trimmer_bg_color_add_video">@color/transparent</item>
        <item name="trimmer_time_visible">true</item>
        <item name="trimmer_play_control_visible">true</item>
        <item name="trimmer_hint_visible">false</item>
        <!---->

        <!--Cover-->
        <item name="coverNextButtonStyle">@style/CustomCoverNextButtonStyle</item>
        <item name="coverCancelButtonStyle">@style/CustomCoverCancelButtonStyle</item>
        <item name="coverSeekBarStyle">@style/CustomCoverSeekBarStyle</item>
        <item name="coverDescriptionStyle">@style/CustomCoverDescriptionStyle</item>
        <item name="coverChooseViewBackground">@null</item>
        <!---->

    </style>


    <!--Cover styles-->
    <style name="CustomTrimmerViewStyle" parent="TrimmerViewStyle">
        <item name="trimmer_default_color">@color/violet_red</item>
        <item name="trimmer_wrong_color">@color/violet_red</item>
        <item name="trimmer_left_pointer">@drawable/ic_trimmer_left_pointer</item>
        <item name="trimmer_right_pointer">@drawable/ic_trimmer_right_pointer</item>
        <item name="trimmer_border_line">@drawable/bg_trimmer_border_line</item>
        <item name="trimmer_pointer_center_line_color">@color/white</item>
        <item name="video_trimmer_player_pointer_color">@color/white</item>
    </style>

    <style name="CustomTrimmerRecyclerStyle" parent="TrimmerRecyclerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomTrimmerBackButtonStyle" parent="TrimmerBackButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/ic_nav_back_arrow</item>
    </style>

    <style name="CustomTrimmerNextButtonStyle" parent="TrimmerNextButtonStyle">
        <item name="android:textColor">@color/robins_egg_blue</item>
    </style>

    <style name="CustomTrimmerCancelButtonStyle" parent="TrimmerCancelButtonStyle">
        <item name="android:textColor">@color/robins_egg_blue</item>
    </style>

    <style name="CustomTrimmerDurationTimelineStyle" parent="TrimmerDurationTimelineStyle">
        <item name="timeline_duration_background_color">@color/bg_trimmer_duration_timeline</item>
        <item name="timeline_duration_divider_color">@color/black</item>
        <item name="timeline_duration_stable_color">@color/white</item>
        <item name="timeline_duration_fit_color">@color/robins_egg_blue</item>
        <item name="timeline_duration_limit_color">@color/violet_red</item>
    </style>

    <style name="CustomTrimmerDurationSumTextStyle" parent="TrimmerDurationSumTextStyle">
        <item name="android:background">@drawable/bg_selector_trimmer_duration_sum</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomTrimmerDeleteCrossStyle" parent="TrimmerDeleteCrossStyle">
        <item name="android:layout_width">@dimen/icon_size_32</item>
        <item name="android:layout_height">@dimen/icon_size_32</item>
        <item name="android:src">@drawable/ic_delete_cross</item>
    </style>

    <style name="CustomTrimmerDeleteLabelStyle" parent="TrimmerDeleteLabelStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomTrimmerContentViewStyle" parent="TrimmerContentViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomTrimmerContentLabelStyle" parent="TrimmerContentLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTrimmerThumbImageStyle" parent="TrimmerThumbImageStyle">
        <item name="android:layout_width">@dimen/gallery_thumb_size</item>
        <item name="android:layout_height">@dimen/gallery_thumb_size</item>
        <item name="bordered_image_corner_radius">4dp</item>
        <item name="bordered_image_border_drawable">@drawable/bg_bordered_image</item>
    </style>

    <style name="CustomTrimmerThumbTextStyle" parent="TrimmerThumbTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!---->


    <!--Cover styles-->
    <style name="CustomCoverNextButtonStyle" parent="CoverNextButtonStyle">
        <item name="android:textColor">@color/robins_egg_blue</item>
    </style>

    <style name="CustomCoverCancelButtonStyle" parent="CoverCancelButtonStyle">
        <item name="android:textColor">@color/robins_egg_blue</item>
    </style>

    <style name="CustomCoverSeekBarStyle" parent="CoverSeekBarStyle">
        <item name="android:progressTint">@color/robins_egg_blue</item>
        <item name="android:thumbTint">@color/robins_egg_blue</item>
    </style>

    <style name="CustomCoverDescriptionStyle" parent="CoverDescriptionStyle">
        <item name="android:textColor">@color/white</item>
    </style>
    <!---->

</resources>
